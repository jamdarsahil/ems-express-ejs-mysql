<!-- include header -->
<%- include('include/_header') %>
    <!-- /include header -->

    <!-- Main Site -->
    <main id="site-main">
        <div class="container">
            <div class="box-nav d-flex justify-between">
                <a href="/admin-login/show-emp/add-emp" class="border-shadow">
                    <span class="text-gradient">Add Employee<i class="icon-add-emp fas fa-user-plus"></i></span>
                </a>
                <div class="border-shadow">
                    <form class="search-emp" method="post">
                        <input class="search_input text-gradient" type="text" name="empId" placeholder="Serach Employee">
                        <button class="search_btn text-gradient" type="submit"><i class="icon-search fas fa-search"></i></button>
                    </form>
                </div>
            </div>
            <!-- form handling -->
            <form action="/" method="POST">
                <table class="table">
                    <thead class="thead-dark">
                        <tr>
                            <th>EmpId</th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Gender</th>
                            <th>PhoneNo</th>
                            <th>Department</th>
                            <th>Salary</th>
                            <th>Password</th>
                            <th>Status</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <%- include('include/_tdata') %>
                    </tbody>
                </table>
            </form>
        </div>
    </main>
    <!-- /Main Site -->


    <!-- include footer -->
    <%- include('include/_footer') %>
        <!-- /include footer -->